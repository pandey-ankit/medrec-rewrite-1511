<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.oracle.weblogic.sample.medrec-javaee</groupId>
    <artifactId>physician</artifactId>
    <version>2.0</version>
  </parent>
  <artifactId>physician-assembly</artifactId>
  <name>physician-assembly</name>
  <dependencies>
    <dependency>
      <groupId>com.oracle.weblogic.sample.medrec-javaee</groupId>
      <artifactId>physician-web</artifactId>
      <version>2.0</version>
      <type>war</type>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <finalName>physician</finalName>

    <plugins>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-meta-inf</id>
            <phase>compile</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/${project.build.finalName}/META-INF</outputDirectory>
              <resources>
                <resource>
                  <directory>ear/META-INF</directory>
                  <includes>
                    <include>application.xml</include>
                    <include>weblogic-application.xml</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
          <generateApplicationXml>false</generateApplicationXml>
          <modules>
            <ejbModule>
              <groupId>com.oracle.weblogic.sample.medrec-javaee</groupId>
              <artifactId>common</artifactId>
              <bundleFileName>common.jar</bundleFileName>
            </ejbModule>
            <jarModule>
              <groupId>com.oracle.weblogic.sample.medrec-javaee</groupId>
              <artifactId>medrec-domain</artifactId>
              <bundleDir>lib</bundleDir>
              <bundleFileName>medrec-domain.jar</bundleFileName>
            </jarModule>
            <jarModule>
              <groupId>com.oracle.weblogic.sample.medrec-javaee</groupId>
              <artifactId>medrec-facade</artifactId>
              <bundleDir>lib</bundleDir>
              <bundleFileName>medrec-facade.jar</bundleFileName>
            </jarModule>
            <webModule>
              <groupId>com.oracle.weblogic.sample.medrec-javaee</groupId>
              <artifactId>physician-web</artifactId>
              <bundleFileName>physician-web.war</bundleFileName>
              <contextRoot>
                /medrec/physician
              </contextRoot>
            </webModule>
          </modules>
        </configuration>
      </plugin>
      <plugin>
        <!-- This is the configuration for the weblogic-maven-plugin -->
        <groupId>com.oracle.weblogic</groupId>
        <artifactId>weblogic-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
  <packaging>ear</packaging>
</project>
